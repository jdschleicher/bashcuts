az-open-repo() {
    REMOTE_URL=$(git config --get remote.origin.url)
    REPO_NAME=$(basename -s .git "$REMOTE_URL")
    echo $AZ_DEFAULT_ORG_URL
    FULL_REPO_URL="$AZ_DEFAULT_ORG_URL$AZ_PROJECT_URL_SAFE/_git/$REPO_NAME"
    echo "Opening Azure Repo: $REPO_NAME..."
    echo "$FULL_REPO_URL"
    start $FULL_REPO_URL
}
