
# AZURE DEVOPS CLI
az-query-my-features() {
    az boards query --output table --wiql "select [id],[Work Item Type],[Title], [System.IterationPath], [System.AreaPath] from workitems where [system.assignedto] = '$AZ_USER_EMAIL' and [Work Item Type] = 'Feature'"
}

az-query-my-tasks() {
    az boards query --output table --wiql "select [id],[Work Item Type],[Title], [System.IterationPath], [System.AreaPath] from workitems where [system.assignedto] = '$AZ_USER_EMAIL' and [Work Item Type] = 'Task'"
}

az-query-my-stories() {
    az boards query --output table --wiql "select [id],[State],[Work Item Type],[Title], [System.AreaPath], [System.IterationPath] from workitems where [system.assignedto] = '$AZ_USER_EMAIL' and [Work Item Type] = 'User Story'"
}

az-query-my-items() {
    az boards query --output table --wiql "select [id],[State],[Work Item Type],[Title], [System.IterationPath], [System.AreaPath] from workitems where [system.assignedto] = '$AZ_USER_EMAIL'"
}

az-query-all-items-by-phrase() {
    echo "What phrase would you like to query?"
    read query_item
    az boards query --output table --wiql "select [id],[Work Item Type],[Title],[System.AreaPath] from workitems where [System.AreaPath] = '$AZ_AREA' and ([Title] contains '$query_item' or [Description] contains '$query_item')" 
}

az-set-default-org-by-bashrc() {
    echo az devops configure --defaults organization=$AZ_DEFAULT_ORG_URL
    az devops configure --defaults organization="$AZ_DEFAULT_ORG_URL"
}

az-set-default-organization() {
    echo What url represents the organization to default?
    read AZ_DEFAULT_ORG_URL
    echo az devops configure -d organization=$AZ_DEFAULT_ORG_URL
    az devops configure -d organization=$AZ_DEFAULT_ORG_URL
}

az-create-child-tasks () {
    echo What is the parent User Story ID to add tasks to?
    read PARENT_ID
    echo What are the Task IDs to add to the User Story? \(comma seprated list\)
    read TASK_IDS

    az boards work-item relation add --id "$PARENT_ID" \
        --relation-type "child" \
        --target-id "$TASK_IDS"

}

